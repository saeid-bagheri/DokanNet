@model LoginVM


@{
    ViewData["Title"] = "ورود";
}
<h3>ورود به سایت</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-action="login" method="post">
            <div class="form-group my-2">
                <label asp-for="UserName" class="control-label my-1"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Password" class="control-label my-1"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group checkbox my-2">
                <label asp-for="RememberMe" class="control-label"></label>
                <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
                <span asp-validation-for="RememberMe" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="ورود به سایت" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a class="btn btn-light my-2" asp-controller="Home" asp-action="Index">بازگشت</a>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}