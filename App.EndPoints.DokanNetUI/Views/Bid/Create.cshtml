@model BidVM
@{
    ViewData["Title"] = "ثبت پیشنهاد";
    Layout = "_Layout";
}


<div class="content">
    <div class="dashboard">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">


                    <h3>ثبت پیشنهاد</h3>
                    <hr />
                    <div class="row">
                        <div class="col-md-4">
                            <form enctype="multipart/form-data" asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <input hidden asp-for="AuctionId" class="form-control" />
                                    <span asp-validation-for="AuctionId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input hidden asp-for="BuyerId" class="form-control" />
                                    <span asp-validation-for="BuyerId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Price" class="control-label my-1"></label>
                                    <input placeholder="@TempData["LastPrice"]" asp-for="Price" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="ثبت" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>


                    <div>
                        <a asp-controller="Home" asp-action="Index">بازگشت</a>
                    </div>


                </div>
                <!-- end content -->
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}